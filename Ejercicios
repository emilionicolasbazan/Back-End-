                    $i++;
                }
                ?>
              </select>
        </body>
    </html>
</DOCTYPE>



/* Ejercicio 7 (Aca directamente copie el codigo realizado ya que no entendi muy bien la logica de la tabla*/


<?php
    echo '<table border=1>';
    
// Cabecera (1º fila)
    echo '<tr>';
    echo '<td>X</td>';
 
    for ($i=1; $i <= 10; $i++) { 
        echo '<td>';
        echo $i;
        echo '</td>';
    }
 
    echo '</tr>';
 
    // contenido
 
    //columna vertical
    for ($i=1; $i <= 10; $i++) { 
        echo '<tr>';
        echo '<td>';
        echo $i;
        echo '</td>';
 
        //calculo tabla multiplicar
        for ($j=1; $j <= 10; $j++) { 
             
            echo '<td>';
            echo $i * $j;
            echo '</td>';
 
        }
 
        echo '</tr>';
    }
 
    echo '</table>';
     
?>















